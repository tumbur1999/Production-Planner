@model List<ProductionPlanner.TestData.Task2TestCase>
@{
  ViewData["Title"] = "Task 2 Test Cases";
}

<div class="container mt-4">
  <h1 class="text-center mb-4">Task 2 Test Cases</h1>

  <div class="alert alert-info">
    <h5><i class="fas fa-info-circle"></i> Informasi Testing</h5>
    <p class="mb-0">Pilih test case untuk mengisi form Task 2 secara otomatis dan melihat hasilnya.</p>
  </div>

  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
          <h5 class="mb-0">10 Test Cases untuk Task 2</h5>
          <span class="badge bg-light text-dark">@Model.Count test cases</span>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-striped table-hover">
              <thead class="table-dark">
                <tr>
                  <th>No</th>
                  <th>Nama Test</th>
                  <th>Input (S-S-R-K-J-S-M)</th>
                  <th>Total</th>
                  <th>Hari Kerja</th>
                  <th>Keterangan</th>
                  <th>Aksi</th>
                </tr>
              </thead>
              <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                  var testCase = Model[i];
                  <tr>
                    <td><strong>@(i + 1)</strong></td>
                    <td><strong>@testCase.Name</strong></td>
                    <td>
                      <div class="d-flex gap-1">
                        <span class="badge bg-secondary">S: @testCase.Senin</span>
                        <span class="badge bg-secondary">S: @testCase.Selasa</span>
                        <span class="badge bg-secondary">R: @testCase.Rabu</span>
                        <span class="badge bg-secondary">K: @testCase.Kamis</span>
                        <span class="badge bg-secondary">J: @testCase.Jumat</span>
                        <span class="badge bg-secondary">S: @testCase.Sabtu</span>
                        <span class="badge bg-secondary">M: @testCase.Minggu</span>
                      </div>
                    </td>
                    <td><span class="badge bg-info">@testCase.Total</span></td>
                    <td><span class="badge bg-warning text-dark">@testCase.WorkingDays</span></td>
                    <td><small class="text-muted">@testCase.Description</small></td>
                    <td>
                      <form method="post" action="/Test/RunTask2Test" class="d-inline">
                        <input type="hidden" name="testCaseIndex" value="@i" />
                        <button type="submit" class="btn btn-sm btn-success">
                          <i class="fas fa-play"></i> Test
                        </button>
                      </form>
                    </td>
                  </tr>
                }
              </tbody>
            </table>
          </div>

          <div class="mt-4">
            <div class="row">
              <div class="col-md-6">
                <form method="post" action="/Test/RunAllTask2Tests">
                  <button type="submit" class="btn btn-warning btn-lg">
                    <i class="fas fa-bolt"></i> Run All Tests
                  </button>
                  <small class="form-text text-muted">Jalankan semua test cases sekaligus</small>
                </form>
              </div>
              <div class="col-md-6 text-end">
                <a href="/Task2" class="btn btn-primary btn-lg">
                  <i class="fas fa-arrow-left"></i> Kembali ke Task 2
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .badge {
    font-size: 0.75em;
  }

  .table td {
    vertical-align: middle;
  }
</style>