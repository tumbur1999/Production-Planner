@model ProductionPlannerDB.Models.Planning
@{
    ViewData["Title"] = "Input Rencana Produksi Mingguan";
}

<h2>Input Rencana Produksi (Senin - Minggu)</h2>

<form asp-action="Index" method="post">
    @foreach (var day in new[] { "Senin", "Selasa", "Rabu", "Kamis", "Jumat", "Sabtu", "Minggu" })
    {
        <label>@day</label>
        <input name="@day" type="number" min="0" required /><br />
    }
    <button type="submit">Proses</button>
</form>

