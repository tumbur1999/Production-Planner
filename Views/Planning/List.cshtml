@model IEnumerable<ProductionPlannerDB.Models.Planning>

<h2>Daftar Data Perencanaan Produksi</h2>

<table border="1" cellpadding="5">
    <tr>
        <th>ID</th><th>Senin</th><th>Selasa</th><th>Rabu</th><th>Kamis</th><th>Jumat</th><th>Sabtu</th><th>Minggu</th>
        <th>Total Awal</th><th>Total Akhir</th><th>Hasil Perataan</th><th>Tanggal</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Senin</td>
            <td>@item.Selasa</td>
            <td>@item.Rabu</td>
            <td>@item.Kamis</td>
            <td>@item.Jumat</td>
            <td>@item.Sabtu</td>
            <td>@item.Minggu</td>
            <td>@item.TotalAwal</td>
            <td>@item.TotalAkhir</td>
            <td>@item.Result</td>
            <td>@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
        </tr>
    }
</table>

