@{
    ViewData["Title"] = "Hasil Perataan Produksi";
    var original = (List<int>)ViewBag.Original;
    var result = (int[])ViewBag.Result;
    int total = (int)ViewBag.Total;
}

<h2>Hasil Perataan Produksi</h2>

<table border="1" cellpadding="5">
    <tr><th>Hari</th><th>Rencana Awal</th><th>Rencana Baru</th></tr>
    @for (int i = 0; i < 5; i++)
    {
        <tr>
            <td>@(new[] { "Senin", "Selasa", "Rabu", "Kamis", "Jumat" }[i])</td>
            <td>@original[i]</td>
            <td>@result[i]</td>
        </tr>
    }
</table>

<p><strong>Total produksi:</strong> @total mobil</p>
